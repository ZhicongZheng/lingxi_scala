# common api

->          /                     interfaces.api.ApiRouter

GET         /                     controllers.Default.redirect(to = "./docs/")

POST        /files/upload         interfaces.controller.FileController.upload
# users api

POST        /users/login          interfaces.controller.AuthWriteController.login

POST        /users/logout         interfaces.controller.AuthWriteController.logout

GET         /users/current        interfaces.controller.AuthReadController.current

GET         /users                interfaces.controller.AuthReadController.listUserByPage(page: Int ?= 1,size: Int ?= 10, sort: Option[String])

DELETE      /users/$id<[0-9]+>    interfaces.controller.AuthWriteController.deleteUser(id: Int)

POST        /users                interfaces.controller.AuthWriteController.createUser

PUT         /users/password       interfaces.controller.AuthWriteController.changePwd

GET         /users/login-code     interfaces.controller.AuthReadController.loginCode

POST        /users/$useId<[0-9]+>/roles/$roleId<[0-9]+>  interfaces.controller.AuthWriteController.changeUserRole(useId: Long, roleId: Long)

# roles api
POST        /roles               interfaces.controller.AuthWriteController.createRole

DELETE      /roles/$id<[0-9]+>   interfaces.controller.AuthWriteController.deleteRole(id: Int)

GET         /roles               interfaces.controller.AuthReadController.listRoleByPage(page: Int ?= 1,size: Int ?= 10, sort: Option[String])

PUT         /roles               interfaces.controller.AuthWriteController.updateRole


