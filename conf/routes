# common api

->          /                     api.ApiRouter

GET         /                     controllers.Default.redirect(to = "./docs/")

POST        /files/upload         controller.FileController.upload
# users api

POST        /users/login          auth.controller.AuthWriteController.login

POST        /users/logout         auth.controller.AuthWriteController.logout

GET         /users/current        auth.controller.AuthReadController.current

GET         /users                auth.controller.AuthReadController.listUserByPage(page: Int ?= 1,size: Int ?= 10, sort: Option[String])

DELETE      /users/$id<[0-9]+>    auth.controller.AuthWriteController.deleteUser(id: Int)

POST        /users                auth.controller.AuthWriteController.createUser

PUT         /users/password       auth.controller.AuthWriteController.changePwd

GET         /users/login-code     auth.controller.AuthReadController.loginCode

# roles api
POST        /roles               auth.controller.AuthWriteController.createRole

DELETE      /roles/$id<[0-9]+>   auth.controller.AuthWriteController.deleteRole(id: Int)

GET         /roles               auth.controller.AuthReadController.listRoleByPage(page: Int ?= 1,size: Int ?= 10, sort: Option[String])


